        {
            "name": "drops",
            "config": {
                "items": [
                    {
                        "item": "diamond",
                        "commands": [
                            "say @p dropped something!",
                            "tp @p 25 4 28"
                        ]
                    }
                ],
                "runEvery": 5
            }
        },
        {
            "name": "clock",
            "config": {
                "clocks": [
                    {
                        "x": 10,
                        "y": 10,
                        "z": 10,
