        {
            "name": "portal",
            "config": {
                "portals": [
                    {
                        "target": {
                            "x": 0,
                            "y": 0,
                            "z": 0,
                            "dx": 10,
                            "dy": 10,
                            "dz": 10
                        },
                        "commands": [
                            "say @p is moving!",
                            "tp @p 25 4 28"
                        ]
                    }
                ]
            }
        }
    ]
